<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CollapsibleContentSample.SectionHeaderView">
    
    <ContentView.Content>
        <Grid BackgroundColor="#50000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" BackgroundColor="#50000000" Padding="5,0,5,0">
                <Label x:Name="lblHeaderTitle" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" />
                <Button x:Name="btnHeader" Text="Close" TextColor="White" BackgroundColor="#555" HorizontalOptions="End" />
            </Grid>

            <Grid Grid.Row="1" x:Name="grdContent" Padding="5,0,5,5" />
        </Grid>
    </ContentView.Content>
</ContentView>