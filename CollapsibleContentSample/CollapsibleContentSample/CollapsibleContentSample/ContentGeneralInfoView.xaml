<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CollapsibleContentSample.ContentGeneralInfoView">
  
    <ContentView.Content>
        <StackLayout>
            <Label Text="Enter your first name:" TextColor="Black" />
            <Entry Placeholder="First Name" Style="{StaticResource EntryStyle}" />

            <Label Text="Enter your last name:" TextColor="Black" />
            <Entry Placeholder="Last Name" Style="{StaticResource EntryStyle}" />

            <Label Text="Enter your age:" TextColor="Black" />
            <Entry Placeholder="Age" Style="{StaticResource EntryStyle}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>